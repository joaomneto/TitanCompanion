<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".adventurecreation.impl.fragments.st.STCrewAndShipVitalStatisticsFragment">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/crew"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TableLayout
            android:id="@+id/crewStats"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_back">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/crewman2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/skill2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"
                    android:text="@string/stamina2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_back">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/scienceOfficer"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/scienceOfficerSkillValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/scienceOfficerStaminaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"

                    android:textAppearance="?android:attr/textAppearanceMedium"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_back">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/medicalOfficer"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/medicalOfficerSkillValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/medicalOfficerStaminaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"

                    android:textAppearance="?android:attr/textAppearanceMedium"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_back">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/engineeringOfficer"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/engineeringOfficerSkillValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"

                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/engineeringOfficerStaminaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"

                    android:textAppearance="?android:attr/textAppearanceMedium"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_back">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/securityOfficer"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/securityOfficerSkillValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/securityOfficerStaminaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"

                    android:textAppearance="?android:attr/textAppearanceMedium"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_back">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/securityGuard1"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/securityGuard1SkillValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/securityGuard1StaminaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"

                    android:textAppearance="?android:attr/textAppearanceMedium"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_back">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/securityGuard2"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/securityGuard2SkillValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/securityGuard2StaminaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/border_back"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"

                    android:textAppearance="?android:attr/textAppearanceMedium"/>

        </TableRow>


    </TableLayout>


    <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/ship2"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">

        <TextView
                android:id="@+id/shipWeapons"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/weaponsStat"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


        <TextView
                android:id="@+id/shipWeaponsValue"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/shipWeapons"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
                android:id="@+id/shipShields"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/shipWeaponsValue"
                android:text="@string/shields"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


        <TextView
                android:id="@+id/shipShieldsValue"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/shipShields"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
    </RelativeLayout>


</LinearLayout>